//waybar main............................................................
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    //inserted...
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    //done..
    "height": 32,
    "width":1350,
    "margin": "0 35px 0 0",
    "margin-top":3,
    "spacing":0,

    // Choose the order of the modules

    "modules-left": [
		"custom/launcher", 
		"custom/keyboard-layout",
		"idle_inhibitor",
		"cpu", 
		"memory",
		"custom/network_traffic"
	],
    "modules-center": [
		"tray",
		//"wlr/taskbar",
		"hyprland/window", 
		"hyprland/workspaces",
	],
    "modules-right": [ 
		"backlight", 
		"battery",
		"pulseaudio",
		"clock",
		"custom/power"
	],

 // Modules configuration
 
 //   "hyprland/workspaces": {
 //       "disable-scroll": true,
 //       "all-outputs": true,
 //       "on-click": "activate",
 //	      "format": "{name}"
 //   },
