{
	// Place your snippets for c here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"include header": {
		"prefix": "#incstdio",
		"body": "#include <stdio.h>\n\nint main()\n{\n\t$1\n\n\treturn 0;\n}",
		"description": "header auto"
	},
	"forauto": {
		"prefix": "foauto",
		"body": [
			"for(int ${i} = $2; ${i} < ${size}; ${i}++)\n\t$0"
		],
		"description": "for auto"
	},
	"if auto": {
		"prefix": "ifauto",
		"body": "if($1)\n\t$4",
		"description": "if auto"
	},
	"ifelse auto": {
		"prefix": "ifelsauto",
		"body": "if($1)\n\t$4\nelse\n\t",
		"description": "ifelse auto"
	},
	"Print auto": {
		"prefix": "prnfauto",
		"body": "printf(\"\\n$1\");",
		"description": "printf auto"
	},
	"scan auto": {
		"prefix": "scnfauto",
		"body": "scanf(\"%$1\",&$2);",
		"description": "printf auto"
	},
	"caseauto": {
		"prefix": "casauto",
		"body": "case $1:\n\t$4\n\tbreak;",
		"description": "case auto"
	},
}
